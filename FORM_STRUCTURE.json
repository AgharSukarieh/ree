{
  "form_structure": {
    "form_id": "cvForm",
    "form_action": "register.store",
    "form_method": "POST",
    "enctype": "multipart/form-data",
    
    "sections": {
      "1_personal_information": {
        "section_name": "المعلومات الشخصية الأساسية",
        "section_id": "personalInformation",
        "required": true,
        "fields": [
          {
            "name": "profile_image",
            "type": "file",
            "label_ar": "الصورة الشخصية",
            "label_en": "Profile Picture",
            "required": false,
            "accept": "image/*"
          },
          {
            "name": "name",
            "type": "text",
            "label_ar": "الاسم الكامل",
            "label_en": "Full Name",
            "required": true,
            "placeholder_ar": "أدخل اسمك الكامل",
            "placeholder_en": "Enter your full name"
          },
          {
            "name": "jop_title",
            "type": "text",
            "label_ar": "المسمى الوظيفي",
            "label_en": "Job Title",
            "required": true,
            "placeholder_ar": "مطور برمجيات، طبيب، مهندس",
            "placeholder_en": "Software Developer, Doctor, Engineer"
          },
          {
            "name": "phone",
            "type": "tel",
            "label_ar": "رقم الهاتف",
            "label_en": "Phone Number",
            "required": false,
            "placeholder_ar": "+966 50 123 4567",
            "placeholder_en": "+1 234 567 8900"
          },
          {
            "name": "email",
            "type": "email",
            "label_ar": "البريد الإلكتروني",
            "label_en": "Email Address",
            "required": false,
            "placeholder_ar": "example@email.com",
            "placeholder_en": "example@email.com"
          },
          {
            "name": "city",
            "type": "text",
            "label_ar": "المدينة",
            "label_en": "City",
            "required": false,
            "placeholder_ar": "الرياض، جدة، الدمام",
            "placeholder_en": "Riyadh, Jeddah, Dammam"
          },
          {
            "name": "major",
            "type": "select",
            "label_ar": "التخصص الرئيسي",
            "label_en": "Major Field",
            "required": true,
            "options": [
              {"value": "", "label_ar": "اختر التخصص", "label_en": "Select Major"},
              {"value": "IT", "label_ar": "تقنية المعلومات", "label_en": "Information Technology"},
              {"value": "Medicine", "label_ar": "الطب", "label_en": "Medicine"},
              {"value": "Business", "label_ar": "إدارة الأعمال", "label_en": "Business"},
              {"value": "Engineering", "label_ar": "الهندسة", "label_en": "Engineering"}
            ]
          },
          {
            "name": "linkedin_profile",
            "type": "url",
            "label_ar": "ملف LinkedIn",
            "label_en": "LinkedIn Profile",
            "required": false,
            "placeholder_ar": "https://linkedin.com/in/yourprofile",
            "placeholder_en": "https://linkedin.com/in/yourprofile"
          },
          {
            "name": "github_profile",
            "type": "url",
            "label_ar": "ملف GitHub",
            "label_en": "GitHub Profile",
            "required": false,
            "placeholder_ar": "https://github.com/yourusername",
            "placeholder_en": "https://github.com/yourusername"
          },
          {
            "name": "profile_summary",
            "type": "textarea",
            "label_ar": "الملخص المهني",
            "label_en": "Professional Summary",
            "required": false,
            "placeholder_ar": "اكتب ملخصاً مهنياً عن خبراتك ومهاراتك",
            "placeholder_en": "Write a professional summary about your experience and skills"
          }
        ]
      },
      
      "2_languages": {
        "section_name": "اللغات",
        "section_id": "languages",
        "dynamic": true,
        "array_fields": [
          {
            "name": "language_name[]",
            "type": "text",
            "label_ar": "اسم اللغة",
            "label_en": "Language Name",
            "required": false,
            "placeholder_ar": "العربية، الإنجليزية، الفرنسية",
            "placeholder_en": "Arabic, English, French"
          },
          {
            "name": "proficiency_level[]",
            "type": "select",
            "label_ar": "مستوى الإتقان",
            "label_en": "Proficiency Level",
            "required": false,
            "options": [
              {"value": "Beginner", "label_ar": "مبتدئ", "label_en": "Beginner"},
              {"value": "Intermediate", "label_ar": "متوسط", "label_en": "Intermediate"},
              {"value": "Advanced", "label_ar": "متقدم", "label_en": "Advanced"},
              {"value": "Native", "label_ar": "لغة أم", "label_en": "Native"}
            ]
          }
        ]
      },
      
      "3_soft_skills": {
        "section_name": "المهارات الشخصية",
        "section_id": "softSkills",
